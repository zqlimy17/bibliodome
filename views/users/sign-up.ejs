<!DOCTYPE html>
<html>

<head>
    <% include ../partials/head.ejs %>
    <title>Sign Up | Bibliodome | Where Words Come To Life</title>
</head>

<body>
    <div class="wrapper signup-introduction">
        <% include ../partials/nav.ejs %>
        <main>
            <div class="row">
                <div class="col s12 m6">
                    <div class="container">
                        <h1>Create User</h1>
                        <div class="input-field">
                            <form action="/users" method="POST">
                                <div>
                                    <input minlength="3" maxlength="20" id="name" type="text" class="validate"
                                        name="name" style="text-transform: capitalize;" required>
                                    <label for="name">Your Name</label>
                                    <input minlength="6" maxlength="16" id="username" type="text" class="validate"
                                        name="username" style="text-transform: lowercase;" required>
                                    <label for="username">Username</label>
                                    <input minlength="8" maxlength="20" id="password" type="password" class="validate"
                                        name="password" required>
                                    <label for="password">Password</label>
                                </div>
                                <br />
                                <button class="btn" type="submit">Submit</button>
                            </form>
                        </div>
                    </div>
                </div>
        </main>
        <% include ../partials/footer.ejs %>
    </div>
</body>

</html>